                    }else{
                      url = "http://localhost:3000/home?";
                    }
                    url = url+"&"+`search=${x}`
                    console.log(url);
                  return url
                }
                async function urlChange(){
                  //e.preventDefault();
                  const url1 =  await search();
                  console.log(url1);
                  window.location.href=(url1);
                         
