                  </div>
                </div>
            </form>
              <!-- End sidebar search formn-->
            <script>
              async function search(){
                  x=document.getElementById("search").value;
                  await axios.get( `search?contestName=${x}`).then(res=>{
                      console.log(res)
                      url=res.config.url;
                      console.log(url);    
                  })
                return url;
              }
              async function urlChange(){
                //e.preventDefault();
                const url1 =  await search();
                console.log(url1);
                var newUrl=`http://localhost:3000/${url1}`
                console.log(newUrl);
                window.location.href=(newUrl);
                //history.pushState({}, null, newUrl);        
              }
              document.getElementById("searchForm").addEventListener("submit", (event)=>{
                event.preventDefault();
                urlChange(event);
              })
              // document.getElementById("searchForm").submit(function(e){
              //   e.preventDefault();
              //   urlChange();
              // })
             
            </script>
