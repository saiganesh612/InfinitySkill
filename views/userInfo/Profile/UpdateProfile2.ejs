<%- include("../../partials/header2") %>
<% console.log(details) %> 
    <div class="card container" style="margin-top:80px; margin-bottom: 50px; padding: 20px; ">
        <div class="title" style="padding: 20px;">
            <h3 style="color: rgb(65, 131, 206);">Update Profile</h3>
        </div>
        
        <form action="/update-profileData?_method=PUT" method="POST">
            <div class="row" style="padding:30px">
                <div class="col-6" >
                  <div class="form-floating mb-3 ">
                    <input type="text" class="form-control" id="floatingInput" name="fullName" value=<%=details[0].fullName %>  required>
                    <label for="floatingInput">Full name</label>
                  </div>
                </div>
                <div class="col-6">
                  <div class="form-floating mb-3">
                    <input type="tel" class="form-control" id="floatingInput" name="mobileNumber"  value=<%=details[0].mobileNumber  %>  required>
                    <label for="floatingInput">Mobile number</label>
                  </div>
                </div>
              </div>
              <div class="row" style="padding:30px">
                <div class="col">
                <div class="form-floating mb-3">
                  <input type="text" class="form-control" id="floatingInput" name="Skills" value=<%=details[0].Skills  %> required>
                  <label for="floatingInput">Skills</label>
                </div>
                </div>
                <div class="col">
                  <div class="form-floating mb-3">
                    <input type="url" class="form-control" id="floatingInput" name="LinkedInURL" value=<%= details[0].LinkedInURL%> required>
                    <label for="floatingInput">Linked in URL</label>
                  </div>
                  </div>
              </div>
              <div class="row" style="padding:30px">
                <div class="form-floating mb-3">
                  <textarea type="text" class="form-control" id="floatingInput" name="descripton" required><%= details[0].descripton %></textarea>
                  <label for="floatingInput">Descripton</label>
                </div>
              </div>
              <div class="row" style="padding:30px">
                <div class="form-floating mb-3">
                  <input type="file" name="profilePhoto" class="form-control"  name="dp"  accept="image/*" required>
                  <label >Profile Photo</label>
                </div>
              </div>
            <br>
            <button class="btn btn-info btn-lg">Update Details</button>
        </form>
    </div>
<%- include("../../partials/footer") %>
