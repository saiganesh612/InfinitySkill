<%- include("../partials/header2") %>
    <div class="card container" style="margin-top: 50px; margin-bottom: 50px; padding: 20px; ">
        <div class="title" style="padding: 20px;">
            <h3 style="color: rgb(65, 131, 206);">Update Profile</h3>
        </div>
        <div class="alert alert-warning">
            <p style="margin-bottom: 2px;"> <i class="bi bi-exclamation-triangle"></i>&nbsp;&nbsp;
                Once you update your username you will be redirected to login page
                where you need to login again with your new credentials.
            </p>
        </div>
        <form action="/update-profile?_method=PUT" method="POST">
            <div class="row">
                <div class="col">
                    <div class="form-floating mb-3">
                        <input type="text" name="username" class="form-control" id="floatingInput" value="<%= currentUser.username %>" >
                        <label for="floatingInput">User name</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating mb-3">
                        <input type="email" name="email" class="form-control" id="floatingInput" value="<%= currentUser.email %>" >
                        <label for="floatingInput">E-mail</label>
                    </div>
                </div>
            </div>
            <br>
            <button class="btn btn-info btn-lg">Update Details</button>
        </form>
    </div>
<%- include("../partials/footer") %>
